<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.new_project.mapper.UserMapper">
    <select id="selectAllUser" resultType="com.example.new_project.entity.User">
        SELECT * FROM user ORDER BY user_num
    </select>

    <select id="selectUserOne" parameterType="com.example.new_project.entity.User" resultType="com.example.new_project.entity.User">
        SELECT * FROM "user" WHERE id = #{id} AND pass = #{pass}
    </select>

    <select id="selectUserByNum" parameterType="String" resultType="com.example.new_project.entity.User">
        SELECT * FROM "user" WHERE user_num = #{user_num}
    </select>

    <select id="selectUserCheck" parameterType="String" resultType="boolean">
        SELECT COUNT(*) > 0 FROM "user" WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="com.example.new_project.entity.User">
        INSERT INTO "user" (id, pass, name, phone, email)
        VALUES (#{id}, #{pass}, #{name}, #{phone}, #{email})
    </insert>

    <update id="updateUser" parameterType="com.example.new_project.entity.User">
        UPDATE "user"
        SET pass = #{pass}, name = #{name}, phone = #{phone}, email = #{email}
        WHERE id = #{id}
    </update>

    <delete id="deleteUser" parameterType="String">
        DELETE FROM "user" WHERE user_num = #{user_num}
    </delete>
</mapper>
